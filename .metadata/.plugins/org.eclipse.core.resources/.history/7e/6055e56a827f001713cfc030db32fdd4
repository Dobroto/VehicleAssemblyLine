		String[] engineInputSplit = engineInput.split("-");
		
		
		
		//int indexOfOptionalParam = engineInput.indexOf("-") + 1;
		
		//String optionParam = engineInput.substring(indexOfOptionalParam);
		
		return false;
	}

}
